<div id="splide" class="splide">
  <div class="splide__track">
    <ul class="splide__list">
      <li class="splide__slide"><img src="https://shsmoga.com/assets/images/recentnews/QS.png"></li>
      <li class="splide__slide"><img src="https://shsmoga.com/assets/images/recentnews/download.png"></li>
      <li class="splide__slide"><img src="https://shsmoga.com/assets/images/recentnews/affiliations4.jpg"></li>
      <li class="splide__slide"><img src="https://shsmoga.com/assets/images/recentnews/ncc.png"></li>
    </ul>
  </div>
</div>

<style>
  .splide {
  padding: 20px 0;
  margin-top: -150px;
  z-index: 80;
}

.splide__slide img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 8px;
  transition: transform 400ms;
  transform-origin: center center;
}

.splide__slide {
  padding: 1.5rem;
  height: 100%;
}

.splide .splide__arrow svg {
  filter: invert(1);
  width: 24px;
  height: 24px;
}

</style>

<script>
  document.addEventListener( 'DOMContentLoaded', function () {
  new Splide('#splide', {
    type: 'loop',
    perPage: 4,
    autoplay: true,
    interval: 8000,
    flickMaxPages: 4,
    updateOnMove: true,
    padding: '10%',
  }).mount();
});

</script>